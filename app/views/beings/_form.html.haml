= form_for @being do |f|
  - if @being.errors.any?
    #error_explanation
      %h2= "#{pluralize(@being.errors.count, "error")} prohibited this being from being saved:"
      %ul
        - @being.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :alive
    = f.check_box :alive
  .field
    = f.label :history
    = f.text_field :history
  .field
    = f.label :gender
    = f.text_field :gender
  .actions
    = f.submit 'Save'
