= form_for @genotype do |f|
  - if @genotype.errors.any?
    #error_explanation
      %h2= "#{pluralize(@genotype.errors.count, "error")} prohibited this genotype from being saved:"
      %ul
        - @genotype.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :genes
    = f.text_field :genes
  .actions
    = f.submit 'Save'
