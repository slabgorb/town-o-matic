= form_for @phenotype do |f|
  - if @phenotype.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phenotype.errors.count, "error")} prohibited this phenotype from being saved:"
      %ul
        - @phenotype.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :morphology
    = f.text_field :morphology
  .field
    = f.label :development
    = f.text_field :development
  .field
    = f.label :behavior
    = f.text_field :behavior
  .actions
    = f.submit 'Save'
